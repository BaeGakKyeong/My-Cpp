{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "C++ Build and Run",
		"type": "shell",
		"command": "clang++",
		"args": [
		  "-std=c++17",
		  "-Wall",
		  "${workspaceFolder}",  
		  "-o",
		  "${workspaceFolder}/basic"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"options": {
		  "env": {
			"CXX": "clang++",
			"CXXFLAGS": "-std=c++17 -Wall"
		  }
		},
		"detail": "Mac용 C++ 빌드 작업"
	  }
	]
  }
  